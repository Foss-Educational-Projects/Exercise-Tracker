<html>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link
            rel='apple-touch-icon'
            sizes='180x180'
            href='./apple-touch-icon.png'
        />
        <link
            rel='icon'
            type='image/png'
            sizes='32x32'
            href='./favicon-32x32.png'
        />
        <link
            rel='icon'
            type='image/png'
            sizes='16x16'
            href='./favicon-16x16.png'
        />
        <link rel='manifest' href='/site.webmanifest' />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap" rel="stylesheet">
        <link
            rel='stylesheet'
            href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css'
        />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel='stylesheet' href='./css/main.css' />
        <title>Exercise Tracker</title>
    </head>
    <body>
        <div class='exercise-tracker'>
            <header>
                <span>
                    <h1>Exercise Tracker</h1>
                    <i class="fa-solid fa-bars-progress"></i>
                </span>
            </header>
            <section class='create-user-section'>
                    <header class="create-user-header">
                        <i class="fa-solid fa-circle-user"></i>
                        <h2>Create New User</h2>
                        <i class="fa-solid fa-circle-user"></i>
                    </header>
                    <form action='/api/users' method='post' id="create-user-form" class="create-user-form form">
                        <article class="input-section">
                            <i class="fa-solid fa-user"></i>
                            <input
                                id='uname'
                                type='text'
                                name='uname'
                                class='form-input'
                                placeholder='Username'
                            />
                             <i class="fa-solid fa-asterisk"></i>
                        </article>
                        
                        <button
                            type='submit'
                            class='user-form-btn form-btn'>Create User</button>
                    </form>
                    <aside class="hint-section">
                        <header class="hint-header">
                            <i class="fa-solid fa-lightbulb"></i>
                            <h4>Hints</h4>
                        </header>
                        <ul class="hint-list">
                            <li>* Username Must Contain:</li>
                            <li>* Atleast 1 Uppercase Character</li>
                            <li>* Atleast 1 Lowercase Character</li>
                            <li>* Atleast 1 Digit </li>
                            <li>* Must Be Within 8-16 Characters</li>
                            <li>* All * Marked Fields Are Required</li>
                        </ul>
                    </aside>
            </section>
            <section class='add-exercise-section'>
                    <header class="add-exercise-header">
                        <i class="fa-solid fa-dumbbell"></i>
                        <h2>Add An Exercise</h2>
                        <i class="fa-solid fa-dumbbell"></i>
                    </header>
                    <form id='add-exercise-form' class="add-exercise-form form" method='POST'>
                        <article class="input-section">
                            <i class="fa-solid fa-signature"></i>
                            <input
                                id='uid'
                                type='text'
                                name='id'
                                class='form-input'
                                placeholder='ID'
                            />
                            <i class="fa-solid fa-asterisk"></i>
                        </article>
                        <article class="input-section">
                            <i class="fa-solid fa-file"></i>
                            <input
                                id='desc'
                                type='text'
                                name='description'
                                class='form-input'
                                placeholder='Description*'
                            />
                            <i class="fa-solid fa-asterisk"></i>
                        </article>
                        <article class="input-section">
                            <i class="fa-solid fa-stopwatch"></i>
                            <input
                                id='dur'
                                type='text'
                                name='duration'
                                class='form-input'
                                placeholder='Duration(Mins)'
                            />
                            <i class="fa-solid fa-asterisk"></i>
                        </article>
                        <article class="input-section">
                            <i class="fa-solid fa-calendar-days"></i>
                            <input
                                id='date'
                                type='text'
                                name='date'
                                class='form-input'
                                placeholder='Date(YYYY-MM-DD)'
                            />
                            <i class="fa-solid fa-asterisk"></i>
                        </article>
                        <button
                            type='submit'
                            class='exercise-form-btn form-btn'
                        >Add Exercises</button>
                    </form>
                    <aside class="hint-section">
                        <header class="hint-header">
                            <i class="fa-solid fa-lightbulb"></i>
                            <h4>Hints</h4>
                        </header><!-- /header -->
                        <ol class="hint-list">
                            <li>* Provide Correct Details</li>
                            <li>* All * Marked Fields Are Required</li>
                        </ol>
                    </aside>
            </section>
            <section class="fetch-user-info">
                <header>
                    <i class="fa-solid fa-circle-info"></i>
                    <h3>Fetch Details</h3>
                    <i class="fa-solid fa-circle-info"></i>
                </header><!-- /header -->
                <div>
                    <h5>* 
                        <strong>GET User Exercise Log: </strong>
                        <code>GET /api/users/:_id/logs?[from][&to][&limit]</code>
                    </h5>
                    <h5>* 
                        <strong>[ ]</strong> = Optional
                    </h5>
                    <h5>* 
                        <strong>From, To</strong>
                        = Dates (YYYY-MM-DD);
                        <strong>Limit </strong>
                        = Number
                    </h5>
                </div>
                
            </section>
        </div>
        <script src='./js/main.js'></script>
    </body>
</html>